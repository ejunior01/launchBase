    <div class="container">
      <header>
        <nav>
          <li>
            <a href="/"
              ><img src="/img/logo-rocketseat 1.svg" alt="logo-rocketseat"
            /></a>
          </li>
          <li><a href="/">Home</a></li>
          <li><a href="/about.html">Sobre</a></li>
