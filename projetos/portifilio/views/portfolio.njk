{% extends "layout.njk" %}

{% block head %}
    <link href="https://fonts.googleapis.com/icon?family=Material+Icons" rel="stylesheet">
    <title>Aulas</title>
{% endblock head %}

{% block content %}
    <section id="wrapper">
        <h1>Aulas</h1>
    </section>
    <section class="cards">
        {% for item in items %}
            <div class="card" id="{{item.id}}">
                <div class="card-img {{'featured-wrapper' if item.featured}}">
                    <img src="https://img.youtube.com/vi/{{item.id}}/maxresdefault.jpg" alt="Imgem de {{item.title}}">
                    {% if item.featured %}
                        <div class="featured">featured</div>
                    {% endif %}
                </div>
                <div class="card-content">
                    <p>
                        {{item.title}}
                    </p>
                </div>
                <div class="card-info">
                    <p>{{item.duration}}</p>
                    <div class="card-price">
                        {{item.price}}
                    </div>
                </div>
            </div>
        {% endfor %}
    </section>
{% endblock content %}
{% block script %}
    <script src="/script.js"></script>
{% endblock script %}