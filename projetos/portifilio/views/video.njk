{% extends "layout.njk" %}

{% block head %}
    <title>{{item.title}}</title>
{% endblock head %}

{% block content %}
    <section id="wrapper" class="video">
        <h1>{{item.title}}</h1>
    </section>
   <section class="video">
            <div class="card" id="{{item.id}}">
                <div class="card-video-content">
                    <iframe src="https://www.youtube.com/embed/{{item.id}}" frameborder="0"></iframe>
                </div>
                <div class="card-content">
                    <p>
                        {{item.title}}
                    </p>
                </div>
                <div class="card-info">
                    <p>{{item.duration}}</p>
                    <div class="card-price">
                        {{item.price}}
                    </div>
                </div>
            </div>
       </section>
{% endblock content %}
