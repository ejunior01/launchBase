{% extends "layout.njk" %}

{% block head %}
  <link rel="stylesheet" href="/css/receita.css">
  <title>Foodfy |
    {{recipe.title}}</title>
{% endblock head %}

{% block content %}
  <section class="recipes-page">
    <div class="recipes">
      <div class="recipe">
        <div class="recipe-img">
          <img src="{{recipe.image}}" alt="{{recipe.title}}">
        </div>
        <div class="recipe-content">
          <h1>{{recipe.title}}</h1>
          <p>{{recipe.author}}</p>
        </div>
        <div class="recipes-description">
          <div class='description'>
            <h2>Ingredientes
              <span>Mostrar</span></h2>
            <div class="description-info hidden">
              <ul>
                {% for ingredient in recipe.ingredients %}
                  <li>{{ingredient}};</li>
                {% endfor %}
              </ul>
            </div>
          </div>
          <div class='description'>
            <h2>Modo de preparo
              <span>Mostrar</span></h2>
            <div class="description-info hidden">
              <ul>
                {% for preparation in recipe.preparation %}
                  <li>{{preparation}}</li>
                {% endfor %}
              </ul>
            </div>
          </div>
          <div class='description'>
            <h2>Informações adicionais
              <span>Mostrar</span></h2>
            <div class="description-info hidden">
              {% if recipe.information == "" %}
                <p>Nenhuma informação adicional</p>
              {% endif %}
              <p>{{recipe.information}}</p>
            </div>
          </div>
        </div>
      </div>
    </div>
  </section>
{% endblock content %}
{% block scripts %}
  <script src="/js/receitas.js"></script>
{% endblock scripts %}